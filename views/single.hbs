{{#extend "title"}}
    <title>{{post.title}}</title>
{{/extend}}

<div class="w-container">
    <div class="post-title-section"><h1>{{post.title}}</h1>
        {{> postinfo}}
    </div>
    <div class="body-copy w-richtext">
        {{{post.content}}}
    </div>
    <!--    <div class="sharethis-inline-share-buttons"></div>-->

    <div class="post-comment-section">
        <h2>Comments</h2>

        <ul class="comment-list">
            {{#each post.comments}}
                <li class="comment-item">
                    <div class="comment-info">
                        <div class="comment-time">
                            {{formatFriendlyTime this.createdAt}}
                        </div>
                        <div class="comment-user">{{this.user}}</div>
                    </div>

                    <div class="comment-content">
                        {{this.content}}
                    </div>
                </li>
            {{/each}}
        </ul>

        <h3>Leave a comment</h3>
        <div class="form-wrapper">
            <form id="comment-form" data-name="Comment Form">
                <input type="hidden" name="postId" id="commentPostId" value="{{post.id}}"/>
                <label for="Name">Name</label>
                <input type="text"
                       id="commentName" name="Name" placeholder="Enter your name" maxlength="256"
                       class="text-field w-input"/>

                <label for="Message">Message</label>
                <textarea
                        id="commentMessage" name="Message" placeholder="Enter your message" required=""
                        class="text-field text-area w-input"></textarea>

                <button type="button" id="btn-post-comment" class="button w-button">Submit</button>
            </form>
        </div>

    </div>

    <div class="button-wrapper"><a href="/posts" class="button w-button">‚Üê&nbsp;View all posts</a></div>
</div>